<h1>Raffler</h1>

<div ng-controller='RaffleCtrl'>
  <form name="myRaffler", ng-submit='addEntry()'>
    <div class="control-group" ng-class="{error: newEntry.name.$invalid}">
      <input type="text" ng-model="newEntry.name" required>
      <span ng-show="newEntry.name.$error.required" class='help-inline'> Required </span>
      <input type='submit' value='Add'>
    </div>
  </form> 

  <ul>
    <li ng-repeat='entry in entries'>
      {{entry.name}}
      <span ng-show='entry.winner' ng-class="{highlight: entry == lastWinner}" class='winner'>WINNER</span>
    </li>
  </ul>
  <button ng-click='drawWinner()'>Draw Winner</button>
</div>

